{
  "name": "metal-festivals-timeline",
  "version": "1.0.0",
  "description": "European Metal Festivals 2026 Timeline - A vanilla JavaScript web application displaying a timeline of European metal festivals",
  "main": "script.js",
  "scripts": {
    "start": "go run server.go",
    "start:prod": "go run server.go -build",
    "lint": "pnpm lint:js && pnpm lint:css && pnpm lint:html && pnpm lint:md && pnpm lint:go",
    "lint:js": "eslint \"**/*.js\" --max-warnings 0 --ignore-pattern \"build/**\"",
    "lint:css": "stylelint \"**/*.css\" --ignore-pattern \"**/build/**\"",
    "lint:html": "htmlhint \"**/*.html\" --ignore \"**/build/**\" --ignore \"**/components/**\"",
    "lint:md": "markdownlint \"**/*.md\" --config .markdownlint.yaml",
    "lint:go": "golangci-lint run --timeout=5m",
    "lint:fix": "pnpm lint:js --fix && pnpm lint:css --fix && pnpm lint:md --fix",
    "format": "pnpm lint:fix",
    "format:go": "gofmt -s -w . && goimports -w .",
    "validate": "go run scripts/validate_data/validate_data.go",
    "dev": "echo 'Starting development server...' && go run server.go",
    "minify": "pnpm minify:html && pnpm minify:css && pnpm minify:js && pnpm minify:json",
    "minify:html": "./scripts/minify-html.sh",
    "minify:js": "./scripts/minify-js.sh",
    "minify:css": "./scripts/minify-css.sh",
    "minify:json": "./scripts/minify-json.sh",
    "build": "./scripts/build.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neovasili/metal-fests.git"
  },
  "keywords": [
    "metal",
    "festivals",
    "timeline",
    "javascript",
    "vanilla-js",
    "responsive",
    "music",
    "events"
  ],
  "author": "neovasili",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neovasili/metal-fests/issues"
  },
  "homepage": "https://github.com/neovasili/metal-fests#readme",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-minifier-terser": "^7.2.0",
    "htmlhint": "^1.1.4",
    "javascript-obfuscator": "^4.1.1",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.36.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
